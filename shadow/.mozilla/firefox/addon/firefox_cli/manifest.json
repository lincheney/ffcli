{
    "manifest_version": 3,
    "name": "firefox_cli",
    "version": "1.0",

    "description": "Does stuff",

    "browser_specific_settings": {
        "gecko": {
            "id": "firefox_cli@qianli"
        }
    },

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "content_security_policy": {
        "extension_pages": "default-src *; script-src *"
    },

    "host_permissions": [
        "<all_urls>"
    ],

    "permissions": [
        "nativeMessaging",
        "contextualIdentities",
        "scripting",
        "tabs",
        "tabHide",
        "activeTab",
        "webRequest",
        "cookies"
    ]

}

