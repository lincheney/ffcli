{
    "manifest_version": 3,
    "name": "firefox_cli",
    "version": "1.0",

    "description": "Does stuff",

    "browser_specific_settings": {
        "gecko": {
            "id": "firefox_cli@qianli"
        }
    },

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "content_security_policy": {
        "extension_pages": "default-src *; script-src *"
    },

    "optional_host_permissions": [
        "<all_urls>"
    ],

    "permissions": [
        "nativeMessaging",

        "alarms",
        "background",
        "contentSettings",
        "contextualIdentities",
        "debugger",
        "downloads",
        "downloads.open",
        "find",
        "identity",
        "menus",
        "menus.overrideContext",
        "pageCapture",
        "privacy",
        "storage",
        "theme"
    ],

    "optional_permissions": [
        "activeTab",
        "bookmarks",
        "browserSettings",
        "browsingData",
        "captivePortal",
        "clipboardRead",
        "clipboardWrite",
        "contextMenus",
        "cookies",
        "declarativeNetRequest",
        "declarativeNetRequestFeedback",
        "declarativeNetRequestWithHostAccess",
        "devtools",
        "dns",
        "geolocation",
        "history",
        "idle",
        "management",
        "notifications",
        "pkcs11",
        "proxy",
        "scripting",
        "search",
        "sessions",
        "storage",
        "tabHide",
        "tabs",
        "topSites",
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "webRequestFilterResponse",
        "webRequestFilterResponse.serviceWorkerScript"
    ]

}

